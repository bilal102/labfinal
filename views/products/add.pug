extends ../layout 
block content
    h1 WELCOME TO ADMINISTRATION
    br
    h3 Product Data
    form(action="/products/add",method="post")
        .form-group
            label(for="name") Name
            input#name(type="text" class="form-control" name="name")
        .form-group
            label(for="category") Category
            input#address(type="text" class="form-control" name="category")
        .form-group
            label(for="price") Price
            input#dresses(type="text" class="form-control" name="price")
        .form-group
            label(for="details") Details
            input#size(type="text" class="form-control" name="details")        
        input(type="submit", value="Submit" class="btn btn-info")    
